{% extends "base.html.twig" %}
{% block body %}
<section class="container">
    <div class="row">
        <div>
        <h1>Messagerie</h1>
        <h2>Boîte de réception</h2>
        <p>Vous avez reçu {{ app.user.received|length }} nouveau(x) message(s) </p>
        </div>
            <div class="wrapper">
                <div class="one">De</div>
                <div class="one">Sujet</div>
                <div class="one">Date</div>
                <div class="one">Actions</div>
                
                {% for message in app.user.received %}
                <div class="one"><a href="{{ path("read", {id: message.id}) }}">{{ message.sender.nickname }}</a></div>
                <div class="one"><a href="{{ path("read", {id: message.id}) }}">{{ message.title }}</a></div>
                <div class="one"><a href="{{ path("read", {id: message.id}) }}">{{ message.createdAt|date }}</a></div>
                <div class="one">
                    <a href="{{ path("delete", {id: message.id}) }}">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"class="bi bi-x-square text-danger" viewBox="0 0 16 16">
